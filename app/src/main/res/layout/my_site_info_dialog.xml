<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:background="@drawable/card_view_bg">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        card_view:background="@android:color/transparent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/site_listing_new_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgCloseDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/ic_back" />

            <ridersadvisor.com.customViews.TextViewCalibriRegular
                android:id="@+id/txtDlgTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="asdasdasda"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <dimpl.com.dimpl.customViews.TextViewCalibriRegular
                android:id="@+id/txtDlgLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="asdasdasda"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <dimpl.com.dimpl.customViews.TextViewCalibriRegular
                android:id="@+id/txtDlgDesc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|top"
                android:text="asdasdasda fsfs  dasd ad a fa fa f asf as fas asf a f a fa fafafa faf afaf dasd ad a fa fa f asf as fas asf a f a fa fafafa faf afaf  dasd ad a fa fa f asf as fas asf a f a fa fafafa faf afaf  dasd ad a fa fa f asf as fas asf a f a fa fafafa faf afaf  dasd ad a fa fa f asf as fas asf a f a fa fafafa faf afaf"
                android:textColor="@color/stoke_bg"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgSiteMap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/trans" />


            <!--<dimpl.com.dimpl.customViews.TextViewCalibriBold-->
