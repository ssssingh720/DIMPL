<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stoke_color"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/mSvContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:src="@drawable/placeholder" />

            <Switch
                android:id="@+id/swtNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:switchPadding="@dimen/dp_30"
                android:padding="@dimen/dp_10"
                android:text="Notification"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="@color/colorPrimary">

                <dimpl.com.dimpl.customViews.EdittextViewRalewayRegular
                    android:id="@+id/edtInputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="Email"
                android:textColorHint="@color/colorPrimary">

                <dimpl.com.dimpl.customViews.EdittextViewRalewayRegular
                    android:id="@+id/edtInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtInputMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="Mobile number"
                android:textColorHint="@color/colorPrimary">

                <dimpl.com.dimpl.customViews.EdittextViewRalewayRegular
                    android:id="@+id/edtInputMobileNumber"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtInputCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="City"
                android:textColorHint="@color/colorPrimary"
                android:visibility="gone">

                <dimpl.com.dimpl.customViews.EdittextViewRalewayRegular
                    android:id="@+id/edtInputCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>