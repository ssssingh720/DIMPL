<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stoke_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relSiteListView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_site_list_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgSiteListView"
                android:layout_width="21.33dp"
                android:layout_height="16.33dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/list_view_white" />

            <TextView
                android:id="@+id/txtSiteListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgSiteListView"
                android:background="@null"
                android:gravity="center"
                android:text="SITE LIST VIEW"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relSitMapView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/white_site_map_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgSiteMapView"
                android:layout_width="21.33dp"
                android:layout_height="16.33dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/map_view_grey" />

            <TextView
                android:id="@+id/txtSiteMapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgSiteMapView"
                android:background="@null"
                android:gravity="center"
                android:text="SITE MAP VIEW"
                android:textColor="@color/stoke_color"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rclMySite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp" />

